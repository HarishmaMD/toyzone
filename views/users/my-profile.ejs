                document.getElementById('pass2Error').innerHTML = ""
                document.getElementById('pass3Error').innerHTML = "Password doesnot match"
                document.getElementById('pass3Error').style.color = 'red'
            } else if (pass2 != pass3) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Password does not match!'
                })
            } else {
                $.ajax({
                    url: '/change-password',
                    method: 'patch',
                    data: {
                        currentPass: pass1,
                        newPass: pass2,
                        confirmPass: pass3
                    },
                    success: (response) => {
                        if (response.response) {
