        .formAddForm {
            display: grid;
            grid-gap: 1rem;
        }

        .fieldAddForm {
            width: 100%;
            display: flex;
            flex-direction: column;
            border: 1px solid var(--color-lighter-gray);
            padding: .5rem;
            border-radius: .25rem;
        }

        .field__labelAddForm {
