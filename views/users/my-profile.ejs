            let pass3 = document.getElementById('pass3').value

            if (pass1 == '') {
                document.getElementById('pass1Error').innerHTML = "Password can't be empty!"
                document.getElementById('pass1Error').style.color = 'red'
            } else if (pass2 == '') {
                document.getElementById('pass1Error').innerHTML = ""
                document.getElementById('pass2Error').innerHTML = "Password can't be empty!"
                document.getElementById('pass2Error').style.color = 'red'
            } else if (pass3 == '') {
