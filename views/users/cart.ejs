									<tr class="total-data">
										<td><strong>Total: </strong></td>
										<td> ₹<span id="total2">
												<%= locals.subTotal %>
											</span>
										</td>
									</tr>
									<tr class="total-data">
										<td><strong>Shipping: </strong></td>
										<td>0</td>
									</tr>
									<tr class="total-data">
										<td><strong>Sub Total: </strong></td>
										<td >₹ <span id="total3"><%= locals.Total %></span>
										</td>
									</tr>
								</tbody>
							</table>
							<div class="cart-buttons">
