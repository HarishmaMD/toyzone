<%- include('../partials/userheader.ejs') %>
    <form method="post" action="/otplogin">
        <section class="vh-20 pt-5 gradient-custom">
            <div class="container px-5 py-5 h-80">
                <div class="row d-flex justify-content-center align-items-center h-50">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card bg-dark text-white" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">

                                <div class="mb-md-5 mt-md-4 pb-5">

                                    <h2 class="fw-bold mb-2 text-uppercase">OTP Login</h2>
                                    <p class="text-white-50 mb-5">Please enter your otp</p>
                                    <% if(locals.otpError){ %>
                                        <h5 class="alert alert-danger mt-3">
                                            <%= msg %>
                                        </h5>
                                        <% } %>

                                    <div class="form-outline form-white mb-4">
                                        <input type="text" name="otp" id="otp"
                                            class="form-control form-control-lg" />
                                        <label class="form-label" for="typeEmailX">Enter your otp</label>
                                        <div class="error"></div>
                                    </div>

                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>






   